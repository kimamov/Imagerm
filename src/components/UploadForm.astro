---
import Input from './Input.astro';
---

<div class="upload-form">
  <form class="bg-slate-50 py-8 px-4 rounded-md" method="POST" action="https://localhost:8080/image">
    <Input name="title" type="text">Image Title</Input>
    <Input name="imagefiles" type="file">Bilder</Input>
    <button class="bg-purple-700 py-1 px-4 mt-2"> submit</button>
  </form>
</div>

<style>
  .upload-form {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
  }
</style>
